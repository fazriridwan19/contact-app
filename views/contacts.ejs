<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mt-5 mb-3">Kontak yang tersedia</h2>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger mb-3">
          <ul>
            <% errors.forEach(error => { %>
              <li> <%= error.msg %>  </li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addModal">
        <i class="bi bi-plus-lg"></i> Add
      </button>
      <!-- Modal -->
      <%- include('./modals/addModal') %> 
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Handphone</th>
            <th scope="col">Provider</th>
            <th scope="col">Region</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, index) => { %>
            <tr>
              <th scope="row"> <%= index+1 %> </th>
              <td> <%= contact.name %> </td>
              <td> <%= contact.number %> </td>
              <td> <%= contact.provider %> </td>
              <td> <%= contact.region %> </td>
              <td>
                <a href="/contacts/<%= contact.id %>" type="button" class="btn btn-warning btn-lg badge rounded-pill">
                  <i class="bi bi-pen-fill"></i> Edit
                </a>
                <form method="post" action="/contact/delete/<%= contact.id %>?_method=DELETE">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger btn-lg badge rounded-pill" onclick="return confirm('Data akan dihapus')"><i class="bi bi-trash-fill"></i> Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>